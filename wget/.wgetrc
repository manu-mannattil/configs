# vim: ft=wget fdm=marker et sts=2 sw=2

# Continue getting a partially downloaded file.
continue = on

# Pretend to be Google Chrome on Windows.
user_agent = "Mozilla/5.0 (Windows NT 6.1; WOW64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/48.0.2564.116 Safari/537.36"

# Consider "connection refused" as a temporary error and try again.
retry_connrefused = on

# On a redirect use the last component of the redirection URL as the local file name.
trust_server_names = on

# Follow FTP links from HTML documents by default.
follow_ftp = on

# Prefer IPv4 connections.
prefer_family = IPv4

# Ignore robots.txt and <meta name=robots content=nofollow>.
robots = off

# Print the HTTP and FTP server responses.
server_response = on

# Timeout connections that take a long time.
timeout = 60
