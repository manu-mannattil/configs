% mathtime.sty -- MathTime Pro 2 fonts with some customizations
%
% Requires: mtpro2, helvet
%

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mathtime}[2017/12/19 v0.1]

% Times for Roman, CM Typewriter for fixed-width text, and
% Helvetica for sans serif.
\RequirePackage{ifxetex,ifluatex}
\ifnum 0\ifxetex 1\fi\ifluatex 1\fi=0 % if pdftex
  % \renewcommand{\rmdefault}{ptm}
  % \renewcommand{\ttdefault}{cmtt}
  % \RequirePackage[scaled=0.92]{helvet}
  \usepackage{tgtermes}
  \usepackage[scale=0.92]{tgheros}
\else % if luatex or xelatex
  \RequirePackage[no-math]{fontspec}
  \setmainfont{TeX Gyre Termes}
  \setsansfont[Scale=0.92]{TeX Gyre Heros}
\fi

% To avoid conflicts with amssymb and Springer's svjour.
\let\Bbbk\relax
\let\heavymath\relax
\let\vec\relax

\RequirePackage[
  morphedbraces,
  mtphrb,
  mtpcal,
  nofontinfo,
  subscriptcorrection,
  zswash
]{mtpro2}

\endinput
