# vim: ft=conf fdm=marker et sts=2 sw=2

# If curl is capable of resolving an address to multiple IP versions
# (which it is if it is IPv6-capable), this option tells curl to resolve
# names to IPv4 addresses only.
# ipv4

# Make curl display progress as a simple progress bar instead of the
# standard, more informational, meter.
progress-bar

# Specify the User-Agent string to send to the HTTP server.
# Pretend to be Google Chrome on Windows.
user-agent = "Mozilla/5.0 (Windows NT 6.1; WOW64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/48.0.2564.116 Safari/537.36"

# When used with -s it makes curl show an error message if it fails.
show-error

# Sends the "Referer Page" information to the HTTP server.
# Use ";auto" as the referer URL to make curl automatically set the
# previous URL (if available).
referer = ";auto"

# Makes curl scan the .netrc (_netrc on Windows) file in the user's home
# directory for login name and password.
netrc

# When used in conjunction with the -o option, curl will create the
# necessary local directory hierarchy as needed.
create-dirs
