# Common configuration for all hosts.
Host *
    Compression yes
    ServerAliveCountMax 5
    ServerAliveInterval 120
    # Don't hash hostnames in ~/.ssh/known_hosts
    # It doesn't provide much security anyway:
    # https://security.stackexchange.com/q/56268
    HashKnownHosts no

Host boron
    HostName 192.168.1.100
    User manu
    ForwardX11 yes

Host lithium
    HostName 192.168.1.101
    User manu
    ForwardX11 yes

Host comet
    HostName 95.168.162.225
    User spinor
    LocalForward 2200 95.168.162.225:22
    DynamicForward 1234

Host smatter
    HostName smatter-login.syr.edu
    User mmannatt
    ForwardX11 yes
