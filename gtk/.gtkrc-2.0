gtk-icon-theme-name = "Humanity"
gtk-font-name = "Nimbus Sans L 10"

# HiDPI hacks {{{1
# ----------------

# Fixes small icons in Inkscape, DeaDBeeF and countless other GTK2
# applications.
gtk-icon-sizes = "gtk-large-toolbar=48,48:gtk-small-toolbar=32,32:gtk-menu=32,32:gtk-dialog=48,48:gtk-button=32,32:gtk-dnd=32,32"

# Increase scroll bar width.
style "scroll" {
    GtkScrollbar::slider-width = 24
}

class "*" style "scroll"
